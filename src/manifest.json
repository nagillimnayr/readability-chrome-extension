{
  "manifest_version": 3,
  "name": "Readability",
  "version": "0.0.1",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],

  "action": {
    "default_title": "Fetch Test!"
  },
  "permissions": ["activeTab", "scripting", "sidePanel"],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      }
    }
  },

  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },

  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["scripts/*", "content/*", "sidepanel/*"]
    }
  ]
}
