{
  "manifest_version": 3,
  "name": "Readability",
  "version": "0.0.1",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],

  "action": {
    "default_title": "Readability!"
  },
  "permissions": ["activeTab", "scripting", "sidePanel", "contextMenus"],

  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "commands": {
    "run_script": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },

  "side_panel": {
    "default_path": "sidePanel/sidePanel.html"
  },

  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["scripts/*", "content/*", "sidePanel/*"]
    }
  ]
}
